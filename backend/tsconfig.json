{
    "compilerOptions": {
        "baseUrl": "./src",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "removeComments": false,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "allowJs": true,
        "lib": [
            "es6"
        ],
        "resolveJsonModule": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*",
        "__tests__/*"
    ],
    "exclude": [
        "mocks",
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "types": [
        "typePatches"
    ]
}